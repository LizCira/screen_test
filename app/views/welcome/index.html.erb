  <script id="filmTemplate" type="text/template">
    <div class='film_card' id='<%%= id %>'>
      <div class='film_poster'>
        <img src='<%%= poster %>' />
      </div>

      <div class='film_title'>
        <%%= title %>
      </div>

      <div class='film_year'>
        <%%= year %>
      </div>
    </div>
  </script>

  <script id="likeTemplate" type="text/template">
    <div class='liked_card' id='<%%= movie_id %>'>
      <div class='liked_poster'>
        <img src='<%%= movie_poster %>' />
      </div>

      <div class='liked_title'>
        <%%= movie_title %>
      </div>

      <div class='liked_year'>
        <%%= movie_year %>
      </div>
    </div>
  </script>

